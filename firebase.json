{
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": 8086
    }
  },
  "hosting": {
    "site": "tjr-scheduler",
    "public": "frontend/dist/frontend/browser",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/webhooks/paystack",
        "function": "paystackWebhook"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
